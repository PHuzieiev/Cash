<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dialog_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/spacing_smaller_8dp"
    android:layout_marginBottom="@dimen/spacing_smaller_8dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/item_dialog_list_iv"
        style="@style/item_dialog_list_iv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small_16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_dialog_title_tv"
            style="@style/item_cur_title_tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_smallest_2dp"
            android:layout_marginTop="@dimen/spacing_smallest_2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_dialog_purchase_tv"
                style="@style/item_cur_purchase_tv" />

            <TextView
                android:id="@+id/item_dialog_sale_tv"
                style="@style/item_cur_sale_tv" />


        </LinearLayout>

        <TextView
            android:id="@+id/item_dialog_date_tv"
            style="@style/item_cur_date_tv" />


    </LinearLayout>

</LinearLayout>