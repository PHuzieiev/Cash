<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/item_ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing_small_16dp"
        android:layout_marginRight="@dimen/spacing_small_16dp"
        android:layout_marginTop="@dimen/spacing_smaller_8dp"
        android:layout_marginBottom="@dimen/spacing_smaller_8dp">

        <TextView
            style="@style/item_cur_short_tv"
            android:id="@+id/item_short_tv"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            tools:ignore="NestedWeights">

            <TextView
                style="@style/item_cur_title_tv"
                android:id="@+id/item_title_tv" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_smallest_2dp"
                android:layout_marginBottom="@dimen/spacing_smallest_2dp">

                <TextView
                    style="@style/item_cur_purchase_tv"
                    android:id="@+id/item_purchase_tv" />

                <TextView
                    style="@style/item_cur_sale_tv"
                    android:id="@+id/item_sale_tv"/>


            </LinearLayout>

            <TextView
                style="@style/item_cur_date_tv"
                android:id="@+id/item_date_tv"/>



        </LinearLayout>

        <ImageView
            style="@style/normal_image_ico"
            android:id="@+id/item_show_details"
            android:src="@drawable/ic_show_details"
            android:layout_marginRight="@dimen/spacing_small_14dp"
            android:layout_marginEnd="@dimen/spacing_small_14dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        style="@style/item_cur_v"
        android:id="@+id/item_v"/>

</LinearLayout>