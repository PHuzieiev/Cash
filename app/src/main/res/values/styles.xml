<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_clear</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Custom dialogs styles -->
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!--Style for fill button -->
    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="DialogInfoTextViewMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_16dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_16dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_24dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_24dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="DialogInfoTextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal_18sp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_16dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_24dp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Fab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
    </style>

    <style name="item_iv">
        <item name="android:layout_height">@dimen/size_100dp</item>
        <item name="android:layout_width">@dimen/size_100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_24dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium_36dp</item>
    </style>

    <style name="short_tv">
        <item name="android:layout_width">@dimen/size_100dp</item>
        <item name="android:layout_height">@dimen/size_100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_smallest_2dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium_36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big_36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">@color/grey_one</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:background">@drawable/circle_gr</item>
    </style>

    <style name="item_short_tv" parent="short_tv">
        <item name="android:layout_marginTop">@dimen/spacing_normal_24dp</item>
    </style>

    <style name="main_iv" parent="item_iv">
        <item name="android:layout_marginTop">@dimen/spacing_smallest_2dp</item>
    </style>

    <style name="title_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_small_16dp</item>
        <item name="android:paddingRight">@dimen/spacing_small_16dp</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/spacing_big_64dp</item>
    </style>

    <style name="item_title_ll" parent="title_ll">
        <item name="android:layout_marginTop">@dimen/spacing_big_86dp</item>
    </style>


    <style name="item_title_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_normal_24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="item_date_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_smallest_12sp</item>
        <item name="android:textColor">@color/white_175</item>
    </style>

    <style name="item_date_two_tv" parent="item_date_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_16dp</item>
    </style>

    <style name="item_action_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_smallest_12sp</item>
        <item name="android:textColor">@color/white_175</item>
    </style>

    <style name="item_about_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_smaller_8dp</item>
        <item name="android:paddingTop">@dimen/spacing_smaller_8dp</item>
        <item name="android:paddingRight">@dimen/spacing_small_16dp</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:textColor">@color/grey_one</item>
    </style>

    <style name="item_show_b" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingRight">@dimen/spacing_small_16dp</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/spacing_big_64dp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_call_iv">
        <item name="android:layout_height">@dimen/small_size_36dp</item>
        <item name="android:layout_width">@dimen/small_size_36dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/spacing_smaller_6dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_18dp</item>
    </style>

    <style name="item_dialog_list_iv">
        <item name="android:layout_height">@dimen/small_size_24dp</item>
        <item name="android:layout_width">@dimen/small_size_24dp</item>
        <item name="android:padding">@dimen/spacing_smaller_6dp</item>
    </style>

    <style name="item_dialog_list_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_16dp</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="item_cur_short_tv">
        <item name="android:layout_width">@dimen/middle_size_48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_size_normal_18sp</item>
    </style>

    <style name="item_cur_title_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
    </style>

    <style name="item_cur_date_tv" parent="item_cur_title_tv">
        <item name="android:textColor">@color/grey_one</item>
    </style>

    <style name="item_cur_purchase_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey_one</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller_8dp</item>
    </style>

    <style name="item_cur_sale_tv" parent="item_cur_purchase_tv">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_8dp</item>
    </style>

    <style name="item_cur_v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">@dimen/spacing_big_72dp</item>
        <item name="android:background">@color/grey_zero</item>
    </style>

    <style name="normal_image_ico">
        <item name="android:layout_width">@dimen/small_size_36dp</item>
        <item name="android:layout_height">@dimen/small_size_36dp</item>
        <item name="android:padding">@dimen/spacing_smaller_6dp</item>
    </style>

    <style name="scroll_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_start_1dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="card_view_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_8dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller_8dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_smaller_8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/spacing_smallest_2dp</item>
    </style>

    <style name="vll_in_card_view_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/spacing_small_16dp</item>
    </style>

    <style name="hll_in_card_view_fragment" parent="vll_in_card_view_fragment">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ltv_in_card_view_fragment" parent="item_cur_purchase_tv">
        <item name="android:textSize">@dimen/text_size_smallest_12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller_4dp</item>
    </style>

    <style name="rtv_in_card_view_fragment" parent="ltv_in_card_view_fragment">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_4dp</item>
    </style>

    <style name="let_in_card_view_fragment" parent="ltv_in_card_view_fragment">
        <item name="android:textSize">@dimen/text_size_normal_24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_for_edit_text</item>
        <item name="android:inputType">textVisiblePassword|numberDecimal</item>
    </style>

    <style name="ret_in_card_view_fragment" parent="let_in_card_view_fragment">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_4dp</item>
    </style>


    <style name="vll_in_item_templates">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16dp</item>
        <item name="android:paddingRight">@dimen/spacing_small_16dp</item>
        <item name="android:paddingBottom">@dimen/spacing_smaller_8dp</item>
        <item name="android:paddingTop">@dimen/spacing_smaller_8dp</item>
    </style>

    <style name="ltv_value_in_item_template" parent="ltv_in_card_view_fragment">
        <item name="android:textSize">@dimen/text_size_normal_24sp</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="rtv_value_in_item_template" parent="ltv_value_in_item_template">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_4dp</item>
    </style>

    <style name="tv_equals">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:text">@string/equals</item>
    </style>


</resources>
